create table commentcokkie
(
    commentid     int          not null,
    commentowner  varchar(250) not null,
    commenteduser varchar(250) not null,
    clicked       boolean      default false,
    watched       boolean      default false,
    primary key (commentid,commentowner,commenteduser),
    foreign key (commentid) references commentinfo(commentid),
    foreign key (commentowner) references userinfo(userid),
    foreign key (commenteduser) references userinfo(userid)
);
