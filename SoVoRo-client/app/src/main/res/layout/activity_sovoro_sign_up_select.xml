<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoVoRoSignUpSelect"
    android:background="@color/amber_100"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:src="@drawable/text_logo"
        android:id="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/socialLogin"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="간편하게 소셜 회원가입 하세요"
        android:fontFamily="@font/jua"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_kakao"
        android:id="@+id/kakao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/socialLogin"
        app:layout_constraintRight_toLeftOf="@+id/naver"
        android:layout_marginTop="20dp"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_naver"
        android:id="@+id/naver"
        app:layout_constraintLeft_toRightOf="@id/kakao"
        app:layout_constraintTop_toBottomOf="@id/socialLogin"
        app:layout_constraintRight_toLeftOf="@+id/google"
        android:layout_marginTop="20dp"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_google"
        android:id="@+id/google"
        app:layout_constraintLeft_toRightOf="@id/naver"
        app:layout_constraintTop_toBottomOf="@id/socialLogin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/naver"
        android:background="@color/amber_300"
        android:textSize="25sp"
        android:fontFamily="@font/jua"
        android:text="일반 회원가입"
        android:layout_marginTop="90dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>