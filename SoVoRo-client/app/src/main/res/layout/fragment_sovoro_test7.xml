<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testview.SoVoRoTest7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/sovoro_question_7"

            android:textColor="@color/black_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple"
            android:textSize="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:padding="20dp"
            android:fontFamily="@font/jua"
            />

        <RadioGroup
            android:id="@+id/sovoro_test_radio_group_7"

            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sovoro_question_7"

            >
            <RadioButton
                android:id="@+id/sovoro_answer_radio_7_1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="사과"
                android:textColor="@color/black_grey"
                android:layoutDirection="rtl"
                android:layout_gravity="start"
                android:textAlignment="textStart"
                android:fontFamily="@font/jua"
                android:textSize="35dp"
                />
            <RadioButton
                android:id="@+id/sovoro_answer_radio_7_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="감자"
                android:textColor="@color/black_grey"
                android:layoutDirection="rtl"
                android:layout_gravity="start"
                android:textAlignment="textStart"
                android:fontFamily="@font/jua"
                android:textSize="35dp"
                />
            <RadioButton
                android:id="@+id/sovoro_answer_radio_7_3"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text="강아지"
                android:paddingRight="150dp"
                android:textColor="@color/black_grey"
                android:layoutDirection="rtl"
                android:layout_gravity="start"
                android:textAlignment="textStart"
                android:fontFamily="@font/jua"
                android:textSize="35dp"
                />
            <RadioButton
                android:id="@+id/sovoro_answer_radio_7_4"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text="고양이"
                android:textColor="@color/black_grey"
                android:layoutDirection="rtl"
                android:layout_gravity="start"
                android:textAlignment="textStart"
                android:fontFamily="@font/jua"
                android:textSize="35dp"
                />
        </RadioGroup>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sovoro_test_result_1"
            app:layout_constraintTop_toBottomOf="@+id/sovoro_test_radio_group_7"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:fontFamily="@font/jua"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>