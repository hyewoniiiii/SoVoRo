<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoVoRoCalendarContent">
    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sovoro_calendar_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/jua"
            android:text="날짜를 선택해 주세요"
            android:textColor="@color/black_grey"

            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sovoro_calendar_result_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/jua"
            android:text="맞은 개수는: "
            android:textColor="@color/black_grey"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/sovoro_calendar_result_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sovoro_calendar_date"
            app:layout_constraintHorizontal_chainStyle="packed"
            />

        <TextView
            android:id="@+id/sovoro_calendar_result_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/jua"
            android:text="0/0"

            android:textColor="@color/black_grey"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/sovoro_calendar_result_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sovoro_calendar_result_1"
            app:layout_constraintTop_toBottomOf="@id/sovoro_calendar_date" />

        <TextView
            android:id="@+id/sovoro_calendar_result_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/jua"
            android:text=" 입니다"
            android:textColor="@color/black_grey"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sovoro_calendar_result_2"
            app:layout_constraintTop_toBottomOf="@id/sovoro_calendar_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>